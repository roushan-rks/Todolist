    <div class="box">
        <% for(var i=0;i<newitems.length;i++){ %>
            <form action="/delete" method="post">

                <div class="item">
                    <input type="checkbox" name="checkbox" value="<%= newitems[i]._id %>" onChange="this.form.submit()">
                    <p>
                        <%= newitems[i].name %>
                    </p>
                </div>
                <input type="hidden" name="titlename" value="<%=listtitle%>"></input>
            </form>
            <% } %>
            <!-- </ul> -->
            
            <form class="item2" action="/" method="post" class="item">
                <input type="text" name="newitems" placeholder="New Item" autocomplete="off">
                <button type="submit" name="list" value=<%=listtitle%> >+</button>
            </form>
        </div>

</body>
